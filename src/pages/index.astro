---
import Navigation from '../components/Navigation';
import Hero from '../components/HomePageHeroSection.astro';
import AboutSection from '../components/AboutSection';
import MissionStatementSection from '../components/MissionStatementSection';
import ServicesSection from '../components/ServicesSection';
import HomeCTASection from '../components/HomeCTASection';
import TestimonialsSection from '../components/TestimonialsSection';
import GalaxyParticles from '../components/GalaxyParticles';
import Footer from '../components/FooterSection.astro';
import SpaceAmbiance from '../components/SpaceAmbiance';
import GlitchTransition from '../components/GlitchTransition';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700;900&display=swap" rel="stylesheet">
		<title>UNWRITTEN - Digital Agency</title>
	</head>
	<body class="font-poppins text-base text-body">
		<SpaceAmbiance client:load />
		<header class="min-h-screen bg-body relative">
			<Navigation client:load />
			<GalaxyParticles client:load />
			<div class="pt-[96px]">
				<div class="px-4 lg:px-0 md:mx-[8%] lg:mx-[16%] relative">
					<Hero />
				</div>
			</div>
		</header>
		<GlitchTransition client:load />
		<AboutSection client:load />
		<MissionStatementSection client:load />
		<ServicesSection client:load />
		<GlitchTransition client:load />
		<HomeCTASection client:load />
		<GlitchTransition client:load />
		<TestimonialsSection client:load />
		<Footer />
	</body>
</html>