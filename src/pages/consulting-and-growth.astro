---
// Layout Components
import GalaxyParticles from "../components/GalaxyParticles";
import GlitchTransition from "../components/GlitchTransition";
import StaticBackground from "../components/StaticBackground";
import Navigation from "../components/Navigation";
import ConsultingGrowthPageHeroSection from "../components/ConsultingGrowthPageHeroSection.astro";
import HologramChartBarIcon from "../components/HologramChartBarIcon";
import ConsultingGrowthPageAboutSection from "../components/ConsultingGrowthPageAboutSection";
import SpaceAmbiance from "../components/SpaceAmbiance";
import Footer from "../components/FooterSection.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
    <title>Consulting & Growth - UNWRITTEN Digital Agency</title>
  </head>
  <body class="font-poppins text-base text-body">
    <SpaceAmbiance client:load />
    <header class="min-h-screen bg-body relative">
      <Navigation client:load />
      <GalaxyParticles client:load />
      <div class="pt-[96px]">
        <div class="px-4 lg:px-0 md:mx-[8%] lg:mx-[16%] relative">
          <ConsultingGrowthPageHeroSection />
        </div>
      </div>
    </header>

    <GlitchTransition client:load />

    <ConsultingGrowthPageAboutSection client:load />

    <GlitchTransition client:load />

    <!-- Call to Action Section -->
    <section class="py-24 relative">
      <GalaxyParticles client:load />
      <div class="px-4 lg:px-0 lg:mx-[8%] relative z-10 text-center">
        <h2 class="text-section font-black text-white uppercase mb-8">
          Ready to Scale Your Success?
        </h2>
        <p class="text-xl text-gray-300 mb-12">
          Let's unlock your business's full potential with expert guidance and innovative strategies. Your growth journey starts here.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-12 py-4 bg-[#00ffff] text-body font-bold rounded-lg hover:bg-opacity-80 transition-all duration-300 uppercase"
        >
          Start Your Growth Journey
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
          </svg>
        </a>
      </div>
    </section>

    <Footer />
  </body>
</html>